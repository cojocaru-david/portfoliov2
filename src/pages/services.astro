---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Services" description="David's services page">
	<section class="w-full max-w-screen-xl mx-auto px-4 justify-center flex flex-col py-16">
		<img src="/assets/images/logo_bg.svg" alt="David's Logo" class="w-28 h-28 md:w-36 md:h-36 lg:w-44 lg:h-44 mx-auto mt-8 mb-8 rounded-full" />
		<h2 class="text-xl md:text-3xl lg:text-5xl inline-block text-neutral-900 dark:text-neutral-100 font-bold text-center max-w-7xl">
			<span class="bg-gradient-to-r from-[#B16CEA] to-[#FFA84B] text-transparent bg-clip-text">Hello, I'm David,</span>&nbsp;a full-stack web developer
		</h2>
		<p class="text-sm md:text-base lg:text-lg text-neutral-600 dark:text-neutral-300 mt-4 text-center max-w-3xl mx-auto">
			SERVICES PAGE
		</p>
	</section>	
</Layout>
